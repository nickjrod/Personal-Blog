/**
 * set the start and end direction based on
 * $dir variables
 */
setDirection(state)
  if ($dir == 'ltr')
    return state == 'start' ? left : right

  return state == 'start' ? right : left


/**
 * generate min and max values base on
 * the current sacle ratio
 */
getMinMax(value)
  $scaleRatio = 0.875
  return {
    min: value * $scaleRatio,
    max: value
  }

/*
 * check if the color name is a light color
 */
isLight(color)
  if (color == 'white' || color == 'light' || color == 'gray' || color == 'secondary')
    return true

  return false


/**
 * return the reponsive values
 * this is the core function in base framework
 * it's just a liner equation that calculates the value
 * based on the current viewport width
 * y = mx + c
 * y: font size
 * x: viewport width
 * m: how may font is grow for each pixel (slop)
 * c: iniatal value before any adding
 */
unitRes(min, max, screen-min = 768, screen-max = 1360)
  $slope = (max - min) / (screen-max - screen-min)
  $init = min - screen-min * $slope
  'calc( %s + %s )' % (unit($slope * 100, 'vw') unit($init, 'px'))

